<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="0px"
        android:layout_height="0px"
        android:name="com.shoply.shop.shoply.SearchFragment"
        android:id="@+id/beaconFragment"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/fragment_searchfragment" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="Find self on map"
            android:id="@+id/locateBtn"
            android:onClick="onGeoClick"
            android:layout_row="11"
            android:layout_column="11"
            android:background="@drawable/geolocate" />

        <ImageButton
            android:layout_width="75dp"
            android:contentDescription="Search for items"
            android:layout_height="75dp"
            android:id="@+id/searchBtn"
            android:onClick="onSearchClick"
            android:layout_row="11"
            android:layout_column="29"
            android:background="@drawable/ic_action_search" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="563dp"
            android:id="@+id/webView"
            android:layout_row="57"
            android:layout_column="0"
            android:layout_columnSpan="30" />
    </GridLayout>
</LinearLayout>